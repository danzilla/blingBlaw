<%- include('layout/header') -%>
<%- include('layout/nav') -%>


<h1 class="display-1 text-danger"> <%- title %> </h1>

<form name="adduser" method="post" action="/view">
  <div class="form-row align-items-center">
    <div class="col-auto">
      <label class="sr-only" for="inlineFormInput">Name</label>
      <input type="text" class="form-control mb-2" id="inlineFormInput" name="username" placeholder="Jane Doe">
    </div>
    <div class="col-auto">
      <label class="sr-only" for="inlineFormInputGroup">Email</label>
      <div class="input-group mb-2">
        <div class="input-group-prepend">
          <div class="input-group-text">@</div>
        </div>
        <input type="text" class="form-control" id="inlineFormInputGroup" name="useremail" placeholder="Username">
      </div>
    </div>

    <div class="col-auto">
      <button type="submit" class="btn btn-primary mb-2">Submit</button>
    </div>
  </div>
</form>

<div class="row">

  <% if (data) {%>
    <div class="col-md-6">
      <p> <%- JSON.stringify(data) -%> </p>
    </div>
    <div class="col-md-6">
    <h3> User List </h3>
    <ul>
      <% for(var i=0; i < data.length; i++) { %>
         <ul>
           <li>
             <form name="removeUser" method="post" action="/crud">
               <input type="hidden" id="userID" name="userID" value="<%= data[i]._id %>">
               <%= data[i].userName %> - <%= data[i].userEmail %> - <%= data[i].userDate %>
               <button class="btn btn-danger btn-sm"> Remove </button>
             </form>
           </li>
         </ul>
      <% } %>
  <% } %>
    </div>

</div>


<% include('layout/footer') %>
