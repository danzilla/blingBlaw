

<form class="row" name="adduser" method="post" action="/user">

    <div class="col-md-6 col-sm-12">
      <h1 class="display-5 text-info"><%- pageInfo.page %></h1>
    </div>

    <div class="col-md-6 col-sm-12  h-100">
      <div class="h-100 float-right">
        <!-- Button trigger modal -->
        <button type="button" class="btn btn-outline-primary btn-lg card-1"
          data-toggle="modal" data-target="#uploadStatement">
            New statment
            <span class="ml-1 text-danger"><i class="fas fa-upload"></i></span>
        </button>
      </div>
    </div>
    <hr>

</form>
<hr>

<!-- Modal -->
<div class="modal fade " id="uploadStatement" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
    <div class="modal-content">

      <div class="modal-header">
        <h5 class="modal-title display-4 text-info">
          Statement upload
        </h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

      <div class="modal-body">

        <form action="/statement/upload" method="post">
          <div class="container">
            <div class="row">

            <div class="col-md-6 card-1 p-4">
              <div class="col p-1">
                <div class="form-group">
                  <label for="statementName">name</label>
                  <input type="text" class="form-control"
                  name="statementName" id="statementName" required>
                </div>
                <div class="form-group">
                  <label for="statementType">type</label>
                  <select class="custom-select"
                    name="statementType" id="statementType" aria-label="Example select with button addon">
                    <option selected>Choose...</option>
                    <option value="1">Credit Card</option>
                    <option value="2">Debit</option>
                    <option value="3">Saving</option>
                  </select>
                </div>
              </div>

              <hr class="p-2">

              <div class="form-group">
                <label for="statementFile">Statement file <code>.csv</code></label>
                <div class="custom-file" id="statementFile">
                  <input type="file"
                  class="custom-file-input"
                  name="statementFileInput" id="statementFileInput" aria-describedby="fileHelp" required>
                  <label class="custom-file-label" for="statementFileInput">
                     Select file...
                  </label>
                </div>
              </div>

            </div>

            <div class="col-md-6 pt-4">
              <div class="col card-1 p-4">

                <div class="form-group">
                 <label for="statementDesc">Comments</label>
                 <textarea class="form-control" rows="3"
                  name="statementDesc" id="statementDesc"></textarea>
                </div>
                <div class="form-group">
                  <label for="statementDate" class="col-2 col-form-label">date</label>
                  <input class="form-control" type="date" value="2011-08-19"
                    name="statementDate" id="statementDate">
                </div>


                </div>
                <div class="p-4">
                  <div class="text-center">
                    <div class="btn-group" role="group">
                      <button class="btn btn-lg btn-outline-primary">upload</button>
                    </div>
                  </div>

              </div>


            </div>

            </div>
          </div>
        </form>





      </div>

      <div class="modal-footer">
      </div>

    </div>
  </div>
</div>
