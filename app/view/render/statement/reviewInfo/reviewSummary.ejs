
<div class="col">
  <h3 class="text-center display-5">summary <small> <%- pageInfo.title %></small></h3>
  <hr>
  <!-- pie chart canvas element -->
  <!-- Tilt element -->
  <div data-tilt data-tilt-max="7">
    <canvas id="chartParent" height="250"></canvas>
  </div>
</div>
<div class="col">
  <!-- pie chart canvas element -->
  <!-- Tilt element -->
  <div data-tilt data-tilt-max="7">
    <canvas id="chartChild" height="250"></canvas>
  </div>
</div>


<script>
  new Chart(document.getElementById("chartParent"), {
    type: 'pie',
    data: {
      labels: <%- JSON.stringify(charts.chartParent.chartLabel) %>,
      datasets: [{
        label: "Category and subcategory",
        backgroundColor: <%- JSON.stringify(charts.chartParent.chartColor) %>,
        data: [<%= charts.chartParent.dataValueWithdraw %>]
      }]
    },
    options: {
      title: {
        display: true,
        text: '<%= charts.chartParent.chartName %>'
      }
    }
  });
</script>

