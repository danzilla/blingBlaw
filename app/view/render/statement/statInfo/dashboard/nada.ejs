<div class="scrollYes h-100">
  <% if (dataTrans.length <= 0) { %>
    <div class="col-12 text-center row h-75 justify-content-center align-items-center">
      <% var anime = ["wobble", "jello", "pulse", "rubberBand", "jackInTheBox", "lightSpeedIn", "tada"]; %>
        <% var animeRandom = anime[Math.floor(Math.random()*anime.length)]; %>
        <h1 class="display-2">
          <small>Danzilla</small> <i id="iconSum" class="twa twa-fire pulse animated slow infinite delay-2s"></i>
        </h1>
        <a href="/statement/review" class="btn btn-link text-secondary">
          <h1 class="display-4">
            statements
          </h1>
        </a>
    </div>
    <% } else { %>
      <table class="table table-borderless card-1-no">
        <thead class="thead-dark">
          <tr class="bg-dark text-light">
            <th scope="col" class="text-center">date</th>
            <th scope="col" class="">description</th>
            <th scope="col" class="text-center">
              Transaction
              <i class="twa twa-lg twa-sparkles twa-1x"></i>
            </th>
            <th scope="col" class="text-center">
              <i class="twa twa-lg twa-high-brightness twa-1x fa-pulse"></i>
            </th>
          </tr>
        </thead>
        <tbody>
        <% for(var j=0; j < dataTrans.length; j++) { %>
          <tr class="card-1 ">
            <th scope="col" class="text-center align-middle">
              <%- dataTrans[j].transactionDate %>
            </th>
            <td class="align-middle">
              <%- dataTrans[j].transactionDesc %>
            </td>
            <!-- Withdraw or Deposite - label -->
            <td class="text-center align-middle">
              <h5 class="">
                <% if(dataTrans[j].transactionWithdraw) { %>
                  $ <%= dataTrans[j].transactionWithdraw %>
                  <small><span class="badge badge-secondary font-italic">withdrawal</span></small>
                <% } %>
                <% if(dataTrans[j].transactionDeposite) { %>
                  $ <%= dataTrans[j].transactionDeposite %>
                  <small><span class="badge badge-primary font-italic ">deposite</span></small>
                <% } %>
              </h5>
            </td>
            <!-- catergory and edit button -->
            <td class="text-center align-middle">
              <% if (dataTrans[j].transactionCat == "nada" ||
                dataTrans[j].transactionCat == null ||
                dataTrans[j].transactionCat == "undefined" ||
                dataTrans[j].transactionCat == "") { %>
                <form id="update<%- j %>" action="/statement/update" method="post">
                  <div class="input-group">
                    <!-- form hidden fields - submit -->
                    <input value="<%- dataTrans[j].transactionId %>" type="hidden" name="transactionId" />
                    <select name="transactionCatName" class="form-control custom-select">
                      <option value="nada">choose category</option>
                      <% for(var z=0; z < dataCat.length; z++) { %>
                        <% if (dataCat[z].catParent == "root" ) { %>
                          <optgroup label="<%= dataCat[z].catName %>">
                            <% for (var k=0; k < dataCat.length; k++) { %>
                              <% if (dataCat[z]._id == dataCat[k].catParent ) { %>
                                <option value="<%= dataCat[k]._id %>"><%= dataCat[k].catName %></option>
                              <% } %>
                            <% } %>
                          </optgroup>
                        <% } %>
                      <% } %>
                    </select>
                    <div class="input-group-append">
                      <button class="btn btn-outline-info" form="update<%- j %>">
                        <i class="fas fa-angle-double-right"></i> </button>
                    </div>
                  </div>
                </form>
              <% } %>
            </td>
            <div class="modal fade" id="modalTrans<%= dataTrans[j].transactionId %>" tabindex="-1" role="dialog" aria-hidden="true">
              <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content card-1">
                  <div class=" btn-danger py-2" data-dismiss="modal"></div>

                  <div class="modal-header">
                    <h5><%- dataTrans[j].transactionDesc %></h5>
                  </div>
                  <div class="modal-body">
                    <%- JSON.stringify(dataTrans[j]) %>
                  </div>
                  <div class="modal-footer">
                    <button class="mx-2 btn btn-danger" type="button" data-dismiss="modal">Close</button>
                  </div>
                </div>
              </div>
            </div>
          </tr>
        <% } %>
      </tbody>
    </table>
  <% } %>
</div>
