  <table class="table table-hover table-bordered bg-light">
    <thead class="thead-dark">
      <tr>
        <th scope="col">_id</th>
        <th scope="col">User</th>
        <th scope="col">Pwd</th>
        <th scope="col">Date</th>
        <th scope="col">Modify</th>
      </tr>
    </thead>
    <tbody>
      <% if (data) { %>
        <% for(var i=0; i < data.length; i++) { %>
          <tr>
            <form id="upUser-<%= data[i]._id %>" method="post" action="/user/remove">
              <div class="input-group card-1">
                <th>
                  <div class="input-group-prepend">
                    <span class="input-group-text"><%= data[i]._id %></span>
                  </div>
                </th>
                <td><input type="text" class="form-control" value="<%= data[i].userName %>" disabled></td>
                <td><input type="text" class="form-control" value="<%= data[i].userPwd %>" disabled></td>
                <td><input type="text" class="form-control" value="<%= data[i].userDate %>" disabled></td>
                <td>
                  <div class="input-group-append">
                    <div class="btn-group" role="group" aria-label="Basic example">
                      <button form="upUser-<%= data[i]._id %>" class="btn btn-primary"
                        data-toggle="tooltip" data-placement="top" title="Update user: <%= data[i].userName %>">
                        <i class="fas fa-user-edit"></i></button>
                      <button form="rmUser-<%= data[i]._id %>" class="btn btn-danger"
                        data-toggle="tooltip" data-placement="top" title="Remove user: <%= data[i].userName %>">
                        <i class="fas fa-user-times"></i></button>
                    </div>
                  </div>
                </td>
              </div>
            </form>
            <form id="rmUser-<%= data[i]._id %>" method="post" action="/user/remove">
              <input type="hidden" name="userID" value="<%= data[i]._id %>">
            </form>
          </tr>
          <% } %>
        <% } %>
    </tbody>
  </table>
