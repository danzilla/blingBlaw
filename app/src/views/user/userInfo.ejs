  <table class="table table-bordered bg-light">
    <thead class="thead-dark">
      <tr>
        <th scope="col">_id</th>
        <th scope="col">User</th>
        <th scope="col">Pwd</th>
        <th scope="col">Date</th>
        <th scope="col">Modify</th>
      </tr>
    </thead>
    <tbody>
      <% if (data) { %>
        <% for(var i=0; i < data.length; i++) { %>
          <tr class="card-1">
            <div class="input-group">
              <form id="rmUser-<%= data[i]._id %>" method="post" action="/user/remove">
                <input type="hidden" name="userId" value="<%= data[i]._id %>">
              </form>
              <form id="upUser-<%= data[i]._id %>" method="post" action="/user/update">
                <input type="hidden" name="userId" value="<%= data[i]._id %>" >
                <th><input type="text" name="userID" class="form-control" value="<%= data[i]._id %>" disabled></th>
                <td>
                  <div class="input-group" onclick="deDisable('uNam-<%= data[i].userName %>', 'btnL-<%= data[i].userName %>', 'btnU-<%= data[i].userName %>')">
                    <input id="uNam-<%= data[i].userName %>" type="text" name="userNme" class="form-control" value="<%= data[i].userName %>" disabled>
                    <div class="input-group-append">
                      <button id="btnL-<%= data[i].userName %>" class="btn btn-info" type="button">
                        <i class="fas fa-unlock-alt"></i>
                      </button>
                    </div>
                  </div>
                </td>
                <td>
                  <div class="input-group" onclick="deDisable('pNam-<%= data[i].userName %>', 'ptnL-<%= data[i].userName %>', 'btnU-<%= data[i].userName %>')">
                    <input id="pNam-<%= data[i].userName %>" type="text" name="userNme" class="form-control" value="<%= data[i].userPwd %>" disabled>
                    <div class="input-group-append">
                      <button id="ptnL-<%= data[i].userName %>" class="btn btn-info" type="button">
                        <i class="fas fa-unlock-alt"></i>
                      </button>
                    </div>
                  </div>
                </td>
                <td><input type="text" name="userDate" class="form-control" value="<%= data[i].userDate %>" disabled></td>
              </form>
              <td>
                <div class="input-group-append">
                  <div class="btn-group" role="group" aria-label="Basic example">

                    <button id="btnU-<%= data[i].userName %>" form="upUser-<%= data[i]._id %>" class="btn btn-primary"
                      data-toggle="tooltip" data-placement="top" title="Update user: <%= data[i].userName %>" disabled>
                      <i class="fas fa-user-edit"></i></button>
                    <button form="rmUser-<%= data[i]._id %>" class="btn btn-danger"
                      data-toggle="tooltip" data-placement="top" title="Remove user: <%= data[i].userName %>">
                      <i class="fas fa-user-times"></i></button>

                  </div>
                </div>
              </td>
            </div>
          </tr>

          <% } %>
        <% } %>
    </tbody>
  </table>
