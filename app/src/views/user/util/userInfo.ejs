<table class="table table-bordered bg-light">
  <thead class="thead-dark">
    <tr>
      <th scope="col">_id</th>
      <th scope="col">User</th>
      <th scope="col">Pwd</th>
      <th scope="col">Date</th>
      <th scope="col">Modify</th>
    </tr>
  </thead>
  <tbody>
  <% if (data) { %>
    <% for(var i=0; i < data.length; i++) { %>
    <tr class="card-1">
      <div class="input-group">
        <form id="remove<%= data[i]._id %>" method="post" action="/user/remove">
          <input type="hidden" name="userId" value="<%= data[i]._id %>">
        </form>
          <th><%= data[i]._id %></th>
          <td><%= data[i].userName %></td>
          <td><%= data[i].userPwd %></td>
          <td><%= data[i].userDate %></td>
        <td>
          <div class="input-group-append">
            <div class="btn-group" role="group" aria-label="Basic example">
              <button data-toggle="modal" data-target="#modal<%= data[i]._id %>"
                class="btn btn-primary"><i class="fas fa-user-edit"></i></button>
              <button form="remove<%= data[i]._id %>" class="btn btn-danger">
                <i class="fas fa-user-times"></i></button>
            </div>
          </div>
        </td>
      </div>
    </tr>
    <!-- Modal for update user -->
    <!-- Modal -->
    <div class="modal fade" id="modal<%= data[i]._id %>" tabindex="-1" role="dialog"aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content card-1">
          <div class=" btn-danger py-2" data-dismiss="modal"> </div>
          <div class="modal-header">
            <h4><%= pageInfo.title %><small>update </small></h4>
          </div>
          <div class="modal-body">
            <form id="update<%= data[i]._id %>" method="post" action="/user/update">
              <div class="form-row">
                <div class="col">
                  <input type="text" class="my-1 py-1 form-control" value="<%= data[i]._id %>" disabled>
                  <input type="hidden" name="userId" value="<%= data[i]._id %>">
                </div>
                <div class="col">
                  <input type="text" name="userDate" class="my-1 py-1 form-control" value="<%= data[i].userDate %>" disabled>
                </div>
              </div>
              <input type="text" name="userName" class="my-1 py-1 form-control" value="<%= data[i].userName %>">
              <input type="text" name="userPwd" class="my-1 py-1 form-control" value="<%= data[i].userPwd %>">
            </form>
          </div>
          <div class="modal-footer">
            <button class="mx-2 btn btn-danger" type="button" data-dismiss="modal">Close</button>
            <button form="update<%= data[i]._id %>" class="btn btn-primary">
              Save changes<i class="mx-2 fas fa-user-edit"></i></button>
          </div>
        </div>
      </div>
    </div>
    <% } %>
  <% } %>
  </tbody>
</table>
